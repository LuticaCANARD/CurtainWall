<h3>MainTodo</h3>
@if (schedules != null)
{
	@foreach (Schedule schedule in schedules.GetExpiredSchdule())
	{
		<TodoItem schedule="schedule" />
	}
} 
else
{
	<h2> Now Loading... </h2>
}

@code {
	private ScheduleController.ScheduleController schedules = new Lazy<ScheduleController.ScheduleController>(()=>new ScheduleController.ScheduleController()).Value;
	protected override async Task OnInitializedAsync()
	{
		if (schedules.IsInited == false)
		{
			schedules = new ScheduleController.ScheduleController(
				await Communication.ScheduleDatabase.Instance.GetAllSchedules()
			);
			schedules.SetInit();
		}
		
	}

}
